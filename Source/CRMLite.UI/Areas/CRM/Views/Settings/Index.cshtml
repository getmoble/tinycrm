@using CRMLite.Infrastructure
@{
    ViewBag.Title = "Settings";
}
<div class="col-md-12 m-t-lg">
    
        <div class="bdr">
            <div class="bg-white">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#logo-tab" data-toggle="tab">Change Logo <i class="fa"></i></a></li>
                    <li><a href="#paging-tab" data-toggle="tab">Paging Size <i class="fa"></i></a></li>
                </ul>
                <form id="accountForm" method="post" class="form-horizontal">
                    <div class="tab-content m-t-lg">
                        <div class="tab-pane active" id="logo-tab">

                            <div class="col-md-3 col-xs-12">
                                <div class="form-group">
                                    <input type="file" id="filelogo" name="filelogo" />
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="paging-tab">
                            <div class="col-md-6 col-xs-12" >
                                <div class="form-group">
                                    @*<label class="col-xs-3 control-label">Paging Size</label>*@
                                    
                                        <input type="text" class="form-control" name="pagingsize" data-bind="value:pagingSize" />
                                    
                                </div>
                                <div class="form-group" style="margin-top: 15px;">
                                    
                                        <button type="button" class="btn btn-primary f-width" data-bind="click:Change"><i class="fa fa-pencil"></i> Change</button>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
    </div>
</div>
@section scripts{
<script src="~/Content/js/imageresolver.js"></script>
<script src="~/Content/js/settingsFilelogo.js"></script>
    <script>
        var imagePath = new ImageResolver();
        ThumbNail(ko.toJS(imagePath.ThumbNail()));
       
    </script>
    }
