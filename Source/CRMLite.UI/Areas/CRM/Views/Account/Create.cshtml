@{
    ViewBag.Title = "Create";
}
<div class="col-md-12">
    <h3 class="inline-b">Create Account</h3>
</div>
<div data-bind="loading:$root.isBusy">
    <div data-bind="with:SelectedAccount">
        <div class="col-md-12">
            <h4 class="text-primary">Account Details</h4>
        </div>
        <div class="bdr">
            <div class="col-md-6">

                <div class="form-group ">
                    <label>Account Name</label>
                    <input type="text" data-bind="value:AccountName" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Industry</label>
                    <input type="text" data-bind="value:Industry" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Website</label>
                    <input type="text" data-bind="value:Website" class="form-control" />
                </div>
            </div>
            <div class="col-md-6 ">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" data-bind="value:Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    <input type="text" data-bind="value:Phone,numericOnly:true" class=" form-control" />
                </div>
                <div class="form-group">
                    <label>Assigned To</label>
                    <select data-bind="options: $root.Users ,optionsText: 'Name', optionsValue: 'Id', value:SelectedAssignedto" class="form-control"></select>
                </div>

            </div>
        </div>
        <div class="col-md-12">
            <h4 class="text-primary">Address Information</h4>
        </div>
        <div class="bdr">
            <div class="col-lg-12">
                <div class="form-group">
                    <textarea class="form-control" data-bind="value:Address" rows="3"></textarea>
                </div>
            </div>
        </div>
        <div class="col-md-12">
        </div>
        <div class="bdr col-md-12">

            <div class="form-group">
                <label>Description</label>
                <textarea data-bind="value:Description" class=" form-control" rows="3"></textarea>
            </div>
            
        </div>
    </div>
    <div>
        <div class="col-md-12">
            @*<button type="button" class="btn btn-primary" data-bind="">Save</button>*@
            <button class="btn btn-primary ladda-button" data-style="expand-left" data-bind="ladda:$root.busy,click:$root.saveAccount"><span class=" ladda-label"><i class="fa fa-save"></i>Save</span></button>
        </div>
    </div>
</div>
@section scripts{
<script src="~/App/ViewModels/Account/AccountModel.js"></script>
    <script src="~/App/ViewModels/CRM/models.js"></script>
    <script src="~/App/ViewModels/Account/AccountViewModel.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var vm = new AccountViewModel();
            ko.applyBindings(vm);
            vm.init();
        });
    </script>

}
