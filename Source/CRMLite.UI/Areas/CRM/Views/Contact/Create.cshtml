@model  PropznetCommon.Features.CRM.ViewModel.Contact.ContactViewModel
@using CRMLite.UI.Helpers;
@{
    ViewBag.Title = "Create";
}
<div class="col-md-12">
    <h3 class="inline-b">
        Create
    </h3>
    <div >
        <div>
            <div data-bind="with:SelectedContact">
                <div class="row">
                    <div class="col-md-2 col-xs-12">
                        <div class="radio i-checks">
                            <label>
                                <input type="radio" name='radioType' value="Individual" data-bind="checked: IsCompany">
                                <i></i> Individual
                            </label>
                        </div>
                    </div>
                    <div class="col-md-2 col-xs-12">
                        <div class="radio i-checks">
                            <label>
                                <input type="radio" name='radioType' value="Company" data-bind="checked: IsCompany">
                                <i></i> Company
                            </label>
                        </div>
                    </div>
                    @*<input type="radio" name='radioType' value="Individual" data-bind="checked: Individual" /> <label> Individual</label>
                        <input type="radio" name='radioType' value="Company" data-bind="checked: IsCompany" /> <label>Company</label>*@
                </div>
                <div class="clearfix"></div>
                <div class="bdr">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group ">
                                @Html.RequiredLabelFor(model => model.FirstName, new { @class = "control-label" })
                                <input type="text" data-bind="value:FirstName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Last Name</label>
                                <input type="text" data-bind="value:LastName" class="form-control" />
                            </div>
                            <div class="form-group">
                                @Html.RequiredLabelFor(model => model.Title, new { @class = "control-label" })
                                <input type="text" data-bind="value:Title" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Company</label>
                                <input type="text" data-bind="value:Comapny" class="form-control" />
                            </div>
                           
                            <div class=" form-group">
                                <label>State</label>
                                <input type="text" data-bind="value:State" class="form-control" />
                            </div>
                            <div class=" form-group">
                                <label>Zip</label>
                                <input type="text" data-bind="value:Zip,numericOnly:true" class="form-control" />
                            </div>
                            <div class=" form-group">
                                <label>Region</label>
                                <input type="text" data-bind="value:Region" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6 ">
                            <div class="form-group">
                                @Html.RequiredLabelFor(model => model.Email, new { @class = "control-label" })
                                <input type="text" data-bind="value:Email" class="form-control" />
                            </div>
                            <div class=" form-group">
                                <label>Secondary Email</label>
                                <input type="text" data-bind="value:SecondaryEmail" class="form-control" />
                            </div>
                            <div class="form-group">
                                @Html.RequiredLabelFor(model => model.Phone, new { @class = "control-label" })
                                <input type="text" data-bind="value:Phone,numericOnly:true" class=" form-control" />
                            </div>
                            <div class=" form-group">
                                <label>Office Phone</label>
                                <input type="text" data-bind="value:OfficePhone,numericOnly:true" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Country</label>
                                <select class="form-control" data-bind="options:$root.Countries,optionsText:'Name',optionsValue:'Id',value:CountryId,optionsCaption:'Select Country'"></select>
                            </div>
                           
                            <div class="form-group">
                                <label>City</label>
                                <input type="text" data-bind="value:City" class="form-control" />
                            </div>
                           
                           
                            <div class="clearfix"></div>
                        </div>
                       <div class="col-md-12">

                           <div class="form-group">
                               <label>Address</label>
                               <textarea data-bind="value:Address" rows="3" class=" form-control"></textarea>
                           </div>
                       </div>
                        <div class="col-md-12 bdr">
                            <div class="form-group">
                                <label>Description</label>
                                <textarea data-bind="value:Comments" class=" form-control" rows="3"></textarea>
                            </div>
                        </div>
         
                    </div>
                </div>

            </div>
            <div class="col-md-12">
                <div class="row">
                    <div class="pull-right">
                        <span class="required">*</span><i>Indicates required field</i>
                    </div>
                    <button class="btn btn-primary ladda-button" data-style="expand-left" data-bind="ladda:$root.busy,click:$root.saveContact"><span class=" ladda-label"><i class="fa fa-save"></i> Save</span></button>
                </div>
            </div>
        </div>
        @*<button type="button" class="btn btn-primary" data-bind="click:$root.saveContact">Save</button>*@

    </div>
</div>
@section scripts{
    <script src="~/App/ViewModels/CRM/models.js"></script>
<script src="~/App/ViewModels/Contact/ContactModel.js"></script>
    <script src="~/App/ViewModels/Contact/ContactViewModel.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var vm = new ContactViewModel();
            ko.applyBindings(vm);
            vm.createPage();
        });
    </script>
}
