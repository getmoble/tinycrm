@{
    ViewBag.Title = "Update";
}
<input type="hidden" id="hdnUserId" value="@ViewBag.UserId" />
<div class="">
    <div class="col-md-6 row">
        <div class="col-md-12 m-top20">
            <h3 class="inline-b">Update User Details</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div data-bind="loading:$root.isBusy()">
        <div>
            <input type="hidden" id="hdnAgnetId" value="@ViewBag.UserId" />
            <div class=" pad0 padB0" data-bind="with:selectedUser">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>First Name</label>
                        <input type="text" data-bind="value:firstname" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text" data-bind="value:lastname" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" data-bind="value:email" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" data-bind="value:phoneNumber,numericOnly:true" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Address</label>
                        <textarea data-bind="value:address" class="form-control"></textarea>
                    </div>
                </div>
                <div class="col-md-6 ">
                    <label>&nbsp;</label>
                    <div class="form-group m-l-md-h m-b-md">
                        <label class="checkbox-inline i-checks">
                            <input type="checkbox" data-bind="checked:islistingmember">
                            <i></i>Listing Member
                        </label>
                        @*<input type="checkbox" data-bind="checked:islistingmember" /> <label> Listing Member</label>*@
                    </div>

                    <div class="form-group">
                        <div class="btn-group">
                            <input id="avatar" class="btn btn-primary uploadbtn" type="file" name="avatar" accept=".jpg,.jpeg,.png,.gif" data-bind="text:image" />
                        </div>
                        <div class="nailthumb-container">
                            <img id=ThumbnailImageS height=85 width=90 border=0 data-bind=" attr:{src: image}">
                        </div>
                    </div>

                </div>
                <div class="col-md-12 pad0 padT0">
                    <button class="btn btn-primary ladda-button" data-style="expand-left" data-bind="ladda:$root.busy,click:$root.saveUserProfile"><span class=" ladda-label"><i class="fa fa-file-text"></i> Update</span></button>
                    @*<button type="button" class="btn btn-primary" data-bind="">Update</button>*@
                </div>
            </div>
        </div>
    </div>
    </div>

@section scripts{
    <script src="~/App/ViewModels/CRM/models.js"></script>
    <script src="~/App/ViewModels/User/UserViewModel.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var vm = new UserViewModel();
            ko.applyBindings(vm);
            vm.getUser();
        });
    </script>
<script>
    Ladda.bind('.ladda-button', { timeout: 2000 });
</script>
}