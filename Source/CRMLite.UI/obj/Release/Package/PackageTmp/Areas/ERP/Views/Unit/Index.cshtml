@using PropznetSuite.Infrastructure
@using PropznetSuite.Infrastructure.Enum
<div class="col-md-12 m-top20">
    <h3 class="inline-b">Manage Units</h3><br />
</div>
    <div class="">
        <div data-bind="loading:$root.isBusy">
            <div class="col-md-12">
                <div class="form-inline">
                    <input type="text" data-bind="textInput:query" class="form-control marT-text" placeholder="Search by keyword" />
                    @if (PermissionChecker.CheckPermission(ViewBag.UserPermissions, PermissionCodes.ManageUnit))
                    {
                        <button class="btn btn-primary pull-right" data-bind="click:$root.gotoAddUnit"><i class="fa fa-plus"></i></button>
                    }
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-responsive table-hover">
                <thead>
                    <tr>
                        <th scope="col">Sl No</th>
                        <th scope="col">Unit Name</th>
                        <th scope="col">Property</th>
                        <th scope="col">Category</th>
                        <th scope="col">Total Area</th>
                        <th scope="col">Furnish Type</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody data-bind="template: { name: 'item-property-template',foreach:$root.unitLists }"></tbody>
            </table>
        </div>
    </div>
    <script type="text/html" id="item-property-template">
        <tr>
            <td data-title="Slno">
                <span data-bind="text: ($index() + 1)"> </span>
            </td>
            <td data-title="UnitName">
                <span data-bind="text: UnitName"> </span>
            </td>
            <td data-title="Property">
                <span data-bind="text: PropertyName"> </span>
            </td>
            <td data-title="Category">
                <span data-bind="text: Category"> </span>
            </td>
            <td data-title="TotalArea">
                <span data-bind="text: TotalArea"> </span>
            </td>
            <td data-title="FurnishType">
                <span data-bind="text: FurnishType"> </span>
            </td>
            <td data-title="Action">
                @if (PermissionChecker.CheckPermission(ViewBag.UserPermissions, PermissionCodes.ManagePortfolio))
                {
                    <a href="#" data-bind="click:$root.getEditPage"><i class="fa fa-lg fa-pencil-square-o " data-toggle="tooltip" data-placement="top" title="Edit" data-original-title="Edit"></i></a><span>&nbsp; &nbsp;</span>
                    <a href="#" data-bind="click:$root.removeUnit"><i class="fa fa-lg fa-trash-o" data-toggle="tooltip" data-placement="top" title="Delete" data-original-title="Delete"></i></a>
                }
            </td>
        </tr>

    </script>
    @section scripts{
        <script src="~/App/ViewModels/Amenity/AmenityModel.js"></script>
        <script src="~/App/ViewModels/Unit/UnitModel.js"></script>
        <script src="~/App/ViewModels/Unit/UnitViewModel.js"></script>
        <script>
            var vm = new UnitViewModel();
            ko.applyBindings(vm);
            vm.getLists();
        </script>
    }


