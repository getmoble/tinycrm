<div class="col-md-12 m-t-md">
    <h3 class="inline-b">Create Owner</h3><br />
</div>
    <div class="col-lg-12">
        <div data-bind="template:{name:'create-owner-template',data:selectedOwner}">
        </div>
    </div>
    <script id="create-owner-template" type="text/html">
    <div class="row">
        <div class="col-md-2 col-xs-12 m-l-sm m-b-sm">
            <div class="radio i-checks">
                <label>
                    <input type="radio" name='radioType' value="Individual" data-bind="checked: IsCompany">
                    <i></i> Individual
                </label>
            </div>
        </div>

        <div class="col-md-2 col-xs-12">
            <div class="radio i-checks">
                <label>
                    <input type="radio" name='radioType' value="Company" data-bind="checked: IsCompany">
                    <i></i> Company
                </label>
            </div>
        </div>

    </div>
    @*<input type="radio" name='radioType' value="Individual" data-bind="checked: IsCompany" />
    <label> Individual</label>
    <input type="radio" name='radioType' value="Company" data-bind="checked: IsCompany" />
        <label>Company</label>*@
    <div class="row">
        <div class="col-lg-6">
            <div class=" form-group">
                <label>First Name</label>
                <input type="text" data-bind="value:FirstName" class="form-control" />
            </div>
            <div class=" form-group">
                <label>Last Name</label>
                <input type="text" data-bind="value:LastName" class="form-control" />
            </div>
            <div class=" form-group">
                <label>Company</label>
                <input type="text" data-bind="value:Company" class="form-control" />
            </div>
            <div class=" form-group">
                <label>Address</label>
                <textarea data-bind="value:Address" class="form-control"></textarea>
            </div>
            <div class=" form-group">
                <label>Country</label>
                <select class="form-control" data-bind="options:$root.countries,optionsText:'Name',optionsValue:'Id',value:$parent.selectedCountry,optionsCaption:'Select Country'"></select>
            </div>
            <div class=" form-group">
                <label>State</label>
                <select class="form-control" data-bind="options:$root.states,optionsText:'Name',optionsValue:'Id',value:$parent.selectedState,optionsCaption:'Select State'"></select>
            </div>
            <div class=" form-group">
                <label>City</label>
                <select class="form-control" data-bind="options:$root.cities,optionsText:'Name',optionsValue:'Id',value:CityId,optionsCaption:'Select City'"></select>
            </div>
            <div class=" form-group">
                <label>Zip</label>
                <input type="text" data-bind="value:Zip,numericOnly:true" class="form-control" />
            </div>
            <div class="form-group m-l-md">

                <label class="checkbox-inline i-checks">
                    <input type="checkbox" data-bind="checked:EnableOwnerPortal">
                    <i></i>Enable Owner
                </label>


                @*<input type="checkbox" data-bind="checked:EnableOwnerPortal" />
                <span> &nbsp;&nbsp;Enable Owner </span>*@
            </div>
        </div>
        <div class="col-lg-6">
            <div class=" form-group">
                <label>Email</label>
                <input type="text" data-bind="value:Email" class="form-control" />
            </div>
            <div class=" form-group">
                <label>Secondary Email</label>
                <input type="text" data-bind="value:SecondaryEmail" class="form-control" />
            </div>
            <div class=" form-group">
                <label>Phone</label>
                <input type="text" data-bind="value:Phone,numericOnly:true" class="form-control" />
            </div>
            <div class=" form-group m-b-lg-h">
                <label>Office Phone</label>
                <input type="text" data-bind="value:OfficePhone,numericOnly:true" class="form-control" />
            </div>
            <div class=" form-group">
                <label>Mobile</label>
                <input type="text" data-bind="value:Mobile,numericOnly:true" class="form-control" />
            </div>
            <div class=" form-group m-l-md m-t-xl m-b-md">


                <label class="checkbox-inline i-checks">
                    <input type="checkbox" data-bind="checked:TaxEligible">
                    <i></i>Tax Eligible
                </label>

                @*<input type="checkbox" data-bind="checked:TaxEligible" />
            <span> &nbsp;&nbsp;Tax Eligible</span>*@
            </div>
            <div data-bind="visible:TaxEligible">
                <div class=" form-group">
                    <label>Tax id</label>
                    <input type="text" data-bind="value:TaxId" class="form-control" />
                </div>
                <div class=" form-group">
                    <label>Taxpayer Name</label>
                    <input type="text" data-bind="value:TaxPayerName" class="form-control" />
                </div>
            </div>
            <div class=" form-group">
                <label>Ownership(%)</label>
                <input type="text" data-bind="value:Ownership,numericOnly:true" class="form-control" />
            </div>
            <div class=" form-group m-t-xl">

                <div class="col-md-3 m-l-xs">
                    <label class="checkbox-inline i-checks">
                        <input type="checkbox" data-bind="checked:EmailAlerts">
                        <i></i>Email Alerts
                    </label>
                </div>
                <div class="col-md-6">
                    <label class="checkbox-inline i-checks">
                        <input type="checkbox" data-bind="checked:EmailStatements">
                        <i></i>Email Statements
                    </label>
                </div>

                @*<input type="checkbox" data-bind="checked:EmailAlerts" />
                <span> &nbsp;&nbsp;Email Alerts</span>
                <input type="checkbox" data-bind="checked:EmailStatements" />
            <span> &nbsp;&nbsp;Email Statements</span><br />*@
            </div>
            <div class=" form-group">
                <label class="text-danger">Payment Modes</label>

                <div class="col-md-4">
                    <label class="checkbox-inline i-checks">
                        <input type="checkbox" data-bind="checked:ChequePaymentMode">
                        <i></i>Check
                    </label>
                </div>

                <div class="col-md-4">
                    <label class="checkbox-inline i-checks">
                        <input type="checkbox" data-bind="checked:CashPaymentMode">
                        <i></i>Cash
                    </label>
                </div>

                <div class="col-md-4">
                    <label class="checkbox-inline i-checks">
                        <input type="checkbox" data-bind="checked:OnlinePaymentMode">
                        <i></i>Online Payment
                    </label>
                </div>

                @*<input type="checkbox" data-bind="checked:ChequePaymentMode" />
                <span> &nbsp;&nbsp;Check&nbsp;&nbsp;</span>
                <input type="checkbox" data-bind="checked:CashPaymentMode" />
                <span> &nbsp;&nbsp;Cash&nbsp;&nbsp;</span>
                <input type="checkbox" data-bind="checked:OnlinePaymentMode" />
                <span> &nbsp;&nbsp;Online Payment</span>*@
            </div>
        </div>
        <div class="clearfix"></div>
        <div data-bind="visible:OnlinePaymentMode">
            <h4 class="text-primary">Payment Modes</h4>
            <div class="col-lg-12 bdr ">
                <div class="row">
                    <div class="col-md-6">
                        <div class=" form-group">
                            <label>Account Number</label>
                            <input type="text" data-bind="value:BankAccountNumber,numericOnly:true" class="form-control" />
                        </div>
                        <div class=" form-group">
                            <label>Branch</label>
                            <input type="text" data-bind="value:Branch" class="form-control" />
                        </div>
                        <div class=" form-group">
                            <label>Description</label>
                            <textarea data-bind="value:Description" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class=" form-group">
                            <label>Bank</label>
                            <input type="text" data-bind="value:Bank" class="form-control" />
                        </div>
                        <div class=" form-group">
                            <label>IFSC</label>
                            <input type="text" data-bind="value:BankIFSC" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="row">
            @*<button type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true">
                    Reset
                </button>*@
                <div @*data-bind="loading:$root.isBusy"*@>
                <button class="btn btn-primary ladda-button" data-style="expand-left" data-bind="ladda:$root.busy,click:$parent.saveOwner"><span class=" ladda-label">Save</span></button>
                    <button class="btn btn-primary ladda-button" data-style="expand-left" data-bind="ladda:$root.saveAndCopyBusy,click:$parent.saveAndCopyOwner"><span class=" ladda-label">Save and Copy</span></button>
            </div>
        </div>
    </div>
</script>
    @section scripts{
        <script src="~/App/ViewModels/Owner/OwnerModel.js"></script>
        <script src="~/App/ViewModels/Owner/OwnerViewModel.js"></script>
        <script>
            var vm = new OwnerViewModel();
            ko.applyBindings(vm);
            vm.init();
        </script>
    <script>
        Ladda.bind('.ladda-button', { timeout: 2000 });
    </script>

    }
