@using PropznetSuite.Infrastructure
@using PropznetSuite.Infrastructure.Enum
<div class="col-md-12 m-top20">
    <h3 class="inline-b">Manage Managers</h3><br />
</div>
        <div class="col-md-12">
            <div class=" form-inline">
                <input type="text" data-bind="textInput:query" class="form-control marT-text" placeholder="Search by keyword" />
                @if (PermissionChecker.CheckPermission(ViewBag.UserPermissions, PermissionCodes.ManageManager))
                {
                    <button class="btn btn-primary pull-right" data-bind="click:gotoAddNewManagerPage"><i class="fa fa-plus"></i></button>
                }
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-12">
            <div data-bind="loading:$root.isBusy">
                <table class="table table-striped table-bordered table-responsive table-hover">
                    <thead>
                    <tr>
                        <th scope="col">Sl No</th>
                        <th scope="col">Role</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Mobile</th>
                        <th scope="col"> Actions </th>
                    </tr>
                    </thead>
                    <tbody data-bind="template: { name: 'list-manager-template',foreach:$root.ManagerLists }"></tbody>
                </table>
            </div>
            </div>
    <script type="text/html" id="list-manager-template">
        <tr>
            <td data-title="Slno">
                <span data-bind="text: ($index() + 1)"> </span>
            </td>
            <td data-title="Role">
                <span data-bind="text: Role"> </span>
            </td>
            <td data-title="Name">
                <span data-bind="text: FirstName"> </span>
            </td>
            <td data-title="Email">
                <span data-bind="text: Email"> </span>
            </td>
            <td data-title="Mobile">
                <span data-bind="text: Mobile"> </span>
            </td>
            <td data-title="Action">
                @if (PermissionChecker.CheckPermission(ViewBag.UserPermissions, PermissionCodes.ManageOwner))
                {
                    <a href="#" data-bind="click:$root.getEditPage"><i class="fa fa-lg fa-pencil-square-o " data-toggle="tooltip" data-placement="top" title="Edit" data-original-title="Edit"></i></a><span>&nbsp; &nbsp;</span>
                    <a href="#" data-bind="click:$root.removeManager"><i class="fa fa-lg fa-trash-o" data-toggle="tooltip" data-placement="top" title="Delete" data-original-title="Delete"></i></a>
                }

            </td>
        </tr>
    </script>
    @section scripts{
        <script src="~/App/ViewModels/Manager/ManagerModel.js"></script>
        <script src="~/App/ViewModels/Manager/ManagerViewModel.js"></script>
        <script>
            var vm = new ManagerViewModel();
            ko.applyBindings(vm);
            var infoManager = '@(TempData["InfoMessageForManager"])';
            if (infoManager !== "") {
                toastr["info"](infoManager, "Notification");
            }
            vm.getManagerLists();
        </script>
    }
