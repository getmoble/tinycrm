@using PropznetSuite.Infrastructure
@using PropznetSuite.Infrastructure.Enum
<div class="col-md-12 m-top20">
    <h3 class="inline-b">Manage Owners</h3><br />
</div>
    <div data-bind="loading:$root.isBusy">
        <div class="col-md-12">
            <div class=" form-inline">
                <input type="text" data-bind="textInput:query" class="form-control marT-text" placeholder="Search by keyword" />
                @if (PermissionChecker.CheckPermission(ViewBag.UserPermissions, PermissionCodes.ManageOwner))
                {
                    <button class="btn btn-primary pull-right" data-bind="click:gotoAddNewOwnerPage"><i class="fa fa-plus"></i></button>
                }
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-12">

            <table class="table table-striped table-bordered table-responsive table-hover">
                <thead>
                    <tr>
                        <th scope="col">Sl No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Mobile</th>
                        <th scope="col">Taxpayer Name</th>
                        <th scope="col">Tax Eligible</th>
                        <th scope="col"> Actions </th>
                    </tr>
                </thead>
                <tbody data-bind="template: { name: 'list-owner-template',foreach:$root.ownerLists }"></tbody>
            </table>
        </div>
    </div>

    <script type="text/html" id="list-owner-template">
        <tr>
            <td data-title="Slno">
                <span data-bind="text: ($index() + 1)"> </span>
            </td>
            <td data-title="FirstName">
                <span data-bind="text: FirstName"> </span>
            </td>
            <td data-title="Email">
                <span data-bind="text: Email"> </span>
            </td>
            <td data-title="Mobile">
                <span data-bind="text: Mobile"> </span>
            </td>
            <td data-title="TaxPayerName">
                <span data-bind="text: TaxPayerName"> </span>
            </td>
            <td data-title="TaxEligible">
                <a href="#" data-bind="visible: TaxEligible">
                    <span class="fa fa-check" title="Tax Eligible"></span>
                </a>
                <a href="#" data-bind="visible: !TaxEligible()">
                    <span class="fa fa-remove" title="No Tax Eligible"></span>
                </a>
            </td>
            <td data-title="Action">
                @if (PermissionChecker.CheckPermission(ViewBag.UserPermissions, PermissionCodes.ManageOwner))
                {
                    <a href="#" data-bind="click:$root.getEditPage"><i class="fa fa-lg fa-pencil-square-o " data-toggle="tooltip" data-placement="top" title="Edit" data-original-title="Edit"></i></a><span>&nbsp; &nbsp;</span>
                    <a href="#" data-bind="click:$root.removeOwner"><i class="fa fa-lg fa-trash-o" data-toggle="tooltip" data-placement="top" title="Delete" data-original-title="Delete"></i></a>
                }
            </td>
        </tr>
    </script>
    @section scripts{
        <script src="~/App/ViewModels/Owner/OwnerModel.js"></script>
        <script src="~/App/ViewModels/Owner/OwnerViewModel.js"></script>
        <script>
            var vm = new OwnerViewModel();
            ko.applyBindings(vm);
            var infoOwner = '@(TempData["InfoMessageForOwner"])';
            if (infoOwner !== "") {
                toastr["info"](infoOwner, "Notification");
            }
            vm.getLists();
        </script>
    }
