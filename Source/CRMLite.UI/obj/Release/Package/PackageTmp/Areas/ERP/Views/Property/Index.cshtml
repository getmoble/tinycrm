@using PropznetSuite.Infrastructure
@using PropznetSuite.Infrastructure.Enum
<div class="col-md-12 m-top20">
    <h3 class="inline-b">Manage Properties</h3><br />
</div>
    <div class="">
            <div class="col-md-12">
                <div class="form-inline">
                    <input type="text" data-bind="textInput:query" class="form-control marT-text" placeholder="Search by keyword" />
                    @if (PermissionChecker.CheckPermission(ViewBag.UserPermissions, PermissionCodes.ManageProperty))
                    {
                        <button class="btn btn-primary pull-right" data-bind="click:$root.gotoAddProperty"><i class="fa fa-plus"></i></button>
                    }
                </div>
            </div>
        <div class="clearfix"></div>
        <div class="col-md-12">
            <div data-bind="loading:$root.isBusy">
                <table class="table table-striped table-bordered table-responsive table-hover">
                    <thead>
                    <tr>
                        <th scope="col">Sl No</th>
                        <th scope="col">Property Name</th>
                        <th scope="col">Property For</th>
                        <th scope="col">Contract Start Date</th>
                        <th scope="col">Contract End Date</th>
                        <th scope="col">Portfolio</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody data-bind="template: { name: 'item-property-template',foreach:$root.propertyLists }"></tbody>
                </table>
            </div>
            </div>
    </div>
    <script type="text/html" id="item-property-template">
        <tr>
            <td data-title="Slno">
                <span data-bind="text: ($index() + 1)"> </span>
            </td>
            <td data-title="PropertyName">
                <span data-bind="text: PropertyName"> </span>
            </td>
            <td data-title="PropertyFor">
                <span data-bind="text: PropertyFor"> </span>
            </td>
            <td data-title="ContractStartDate">
                <span data-bind="text: ContractStartDate"> </span>
            </td>
            <td data-title="ContractEndDate">
                <span data-bind="text: ContractEndDate"> </span>
            </td>
            <td data-title="Portfolio">
                <span data-bind="text: Portfolio"> </span>
            </td>
            <td data-title="Action">
                @if (PermissionChecker.CheckPermission(ViewBag.UserPermissions, PermissionCodes.ManageProperty))
                {
                    <a href="#" data-bind="click:$root.getEditPage"><i class="fa fa-lg fa-pencil-square-o " data-toggle="tooltip" data-placement="top" title="Edit" data-original-title="Edit"></i></a><span>&nbsp; &nbsp;</span>
                    <a href="#" data-bind="click:$root.removeProperty"><i class="fa fa-lg fa-trash-o" data-toggle="tooltip" data-placement="top" title="Delete" data-original-title="Delete"></i></a>
                }
            </td>
        </tr>

    </script>
    @section scripts{
        <script src="~/App/ViewModels/Amenity/AmenityModel.js"></script>
        <script src="~/App/ViewModels/Property/PropertyModel.js"></script>
        <script src="~/App/ViewModels/Property/PropertyViewModel.js"></script>
        <script>
            var vm = new PropertyViewModel();
            ko.applyBindings(vm);
            vm.getLists();
        </script>
    }
