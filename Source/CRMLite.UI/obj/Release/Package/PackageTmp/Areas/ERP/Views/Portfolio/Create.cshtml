
<div class="col-md-12 m-top20">
    <h3 class="inline-b">Create Portfolio</h3><br />
</div>
<div class="">
    <div class="col-md-6">
        <div class="form-group">
            <label>Portfolio Name</label>
            <input type="text" data-bind="value:name" placeholder="Enter Portfolio Name" class="form-control" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Portfolio Type</label>
            <select class="form-control" data-bind="options:$root.portfolioTypes,optionsText:'Text',optionsValue:'Value',value:usageType"></select>
        </div>
    </div>
    <div class="col-md-12">

        <button type="button" class="btn bg-light text-left col-md-12  m-b-sm" data-toggle="collapse in" data-target="#PortfolioOwner">Portfolio Owner</button>

        <div id="PortfolioOwner" class="collapse in m-b-sm">
            <div class="col-md-12">
            <button type="button" class="btn btn-primary m-top20" data-toggle="modal" data-target="#createOwnership">Add New Ownership</button>
            <table class="table table-striped table-bordered table-responsive table-hover responsive-table">
                <thead>
                    <tr>
                        <th scope="col">Sl No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Mobile</th>
                        <th scope="col">Ownership %</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody data-bind="template: { name: 'list-portfolioOwner-template',foreach:$root.owners }"></tbody>
            </table>
        </div>
        </div>
        <textarea class="form-control m-top20" placeholder="Enter Description" data-bind="value:description"></textarea>
        <div @*data-bind="loading:$root.isBusy"*@>
            <button class="btn btn-primary ladda-button" data-style="expand-left" data-bind="ladda:$root.busy,click:$root.addPortfolios"><span class=" ladda-label">Save</span></button>
        @*<button type="button" class="btn btn-primary m-top20" data-dismiss="modal" aria-hidden="true" data-bind="click:$root.addPortfolios">
            Save
        </button>*@
        </div>
    </div>
</div>
<div class="modal fade" id="createOwnership" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header dark-bg">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <strong>Owner List</strong>
            </div>
            <div class="modal-body clearfix">
                <h4 class="text-primary">Add Owners</h4>
                <div class="scroll-div-table">
                    <table class="table table-striped table-bordered table-responsive table-hover responsive-table" data-toggle="table" id="pagination" data-url="data2.json" data-pagination="true" data-search="true">
                        <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Mobile</th>
                                <th scope="col">Ownership %</th>
                            </tr>
                        </thead>
                        <tbody data-bind="template: { name: 'list-PortfolioOwnerOnPopup-template',foreach:$root.ownerLists }"></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-md-12">
                    <button type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true">
                        Cancel
                    </button>
                    <button class="btn btn-primary ladda-button" data-style="expand-left" data-bind="ladda:$root.busy,click:$root.addOwners"><span class=" ladda-label">Add</span></button>
                    @*<button type="button" class="btn dark-bg" data-dismiss="modal" data-bind="" aria-hidden="true">
                        Add
                    </button>*@
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/html" id="list-portfolioOwner-template">
    <tr>
        <td data-title="Slno">
            <span data-bind="text: ($index() + 1)"> </span>
        </td>
        <td data-title="FirstName">
            <span data-bind="text: FirstName"> </span>
        </td>
        <td data-title="Email">
            <span data-bind="text: Email"> </span>
        </td>
        <td data-title="Mobile">
            <span data-bind="text: Mobile"> </span>
        </td>
        <td data-title="Ownership">
            <span data-bind="text: Ownership"> </span>
        </td>
        <td>
            <a href="#" data-bind="click:$root.removeOwner"><i class="fa fa-lg fa-trash-o" data-toggle="tooltip" data-placement="top" title="Delete" data-original-title="Delete"></i></a>

        </td>
    </tr>

</script>
<script type="text/html" id="list-PortfolioOwnerOnPopup-template">
    <tr>
        <td data-title="ownerCheckbox">
            <input type="checkbox" data-bind="checked:IsSelect">
        </td>
        <td data-title="FirstName">
            <span data-bind="text: FirstName"> </span>
        </td>
        <td data-title="Email">
            <span data-bind="text: Email"> </span>
        </td>
        <td data-title="Mobile">
            <span data-bind="text: Mobile"> </span>
        </td>
        <td data-title="Ownership">
            <span data-bind="text: Ownership"> </span>
        </td>
    </tr>

</script>
    @section scripts{
        <script src="~/App/ViewModels/Owner/OwnerModel.js"></script>
        <script src="~/App/ViewModels/Portfolio/PortfolioModel.js"></script>
        <script src="~/App/ViewModels/Portfolio/PortfolioViewModel.js"></script>
        <script>
            var vm = new PortfolioViewModel();
            ko.applyBindings(vm);
            vm.init();
        </script>
<script src="~/Content/js/script-ladda.js"></script>
    }
