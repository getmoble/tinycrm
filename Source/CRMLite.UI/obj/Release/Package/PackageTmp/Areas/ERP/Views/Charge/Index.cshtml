@{
    ViewBag.Title = "Index";
}
<div class="col-lg-12" data-bind="with:Charges">
    <div class="col-lg-6">
        <div class="form-group">
            <label>Charge Name</label>
            <input type="text" class="form-control" data-bind="value:ChargeName" />
        </div>
        <div class="form-group">
            <label>GL Account</label>
            <select class="form-control" data-bind="options:$root.gLAccounts,optionsText:'Text',optionsValue:'Value',value:GLAccount"></select>

        </div>
    </div>
    <div class="col-lg-6">
        <div class="form-group">
            <label>Type</label>
            <select class="form-control" data-bind="options:$root.commissionType,optionsText:'Text',optionsValue:'Value',value:ChargeType"></select>
        </div>
    </div>    
    <div class="col-lg-12">
        <button class="btn btn-primary ladda-button" data-style="expand-left" data-bind="ladda:$root.busy,click:$root.CreateCharge"><span class=" ladda-label">Save</span></button>
    </div>
</div>
@section scripts{
<script src="~/App/ViewModels/Charge/ChargeModel.js"></script>
<script src="~/App/ViewModels/Charge/ChargeViewModel.js"></script>
<script>
    var vm = new ChargeViewModel();
    ko.applyBindings(vm);
    vm.init();
</script>

    <script src="~/Content/js/script-ladda.js"></script>
}