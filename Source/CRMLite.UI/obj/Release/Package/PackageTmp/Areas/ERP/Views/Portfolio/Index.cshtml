@using PropznetSuite.Infrastructure
@using PropznetSuite.Infrastructure.Enum
<div class="col-md-12 m-top20">
    <h3 class="inline-b">Manage Portfolios</h3><br />
</div>
<div data-bind="loading:$root.isBusy">
    <div class="">
        <div class="col-md-12">
            <div class="form-inline">
                <input type="text" data-bind="textInput:query" class="form-control marT-text" placeholder="Search by keyword" />
                @if (PermissionChecker.CheckPermission(ViewBag.UserPermissions, PermissionCodes.ManagePortfolio))
            {
            <button class="btn btn-primary pull-right" data-bind="click:$root.gotoAddPortfolioPage"><i class="fa fa-plus"></i></button>
            }
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-responsive table-hover">
                <thead>
                    <tr>
                        <th scope="col">Sl No</th>
                        <th scope="col">Portfolio Name</th>
                        <th scope="col">Portfolio Type</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody data-bind="template: { name: 'item-portfolio-template',foreach:$root.portfolioLists }"></tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/html" id="item-portfolio-template">
    <tr>
        <td data-title="Slno">
            <span data-bind="text: ($index() + 1)"> </span>
        </td>
        <td data-title="PortfolioName">
            <span data-bind="text: PortfolioName"> </span>
        </td>
        <td data-title="PortfolioType">
            <span data-bind="text: PortfolioType"> </span>
        </td>
        <td data-title="Action">
            @if (PermissionChecker.CheckPermission(ViewBag.UserPermissions, PermissionCodes.ManagePortfolio))
            {
                <a href="#" data-bind="click:$root.getEditPage"><i class="fa fa-lg fa-pencil-square-o " data-toggle="tooltip" data-placement="top" title="Edit" data-original-title="Edit"></i></a><span>&nbsp; &nbsp;</span>
                <a href="#" data-bind="click:$root.removePortfolio"><i class="fa fa-lg fa-trash-o" data-toggle="tooltip" data-placement="top" title="Delete" data-original-title="Delete"></i></a>
            }
        </td>
    </tr>

</script>
@section scripts{   
    <script src="~/App/ViewModels/Owner/OwnerModel.js"></script>
    <script src="~/App/ViewModels/Portfolio/PortfolioModel.js"></script>
    <script src="~/App/ViewModels/Portfolio/PortfolioViewModel.js"></script>
    <script>
        var vm = new PortfolioViewModel();
        ko.applyBindings(vm);
        var infoPortfolio = '@(TempData["InfoMessageForPortfolio"])';
        if (infoPortfolio !== "") {
            toastr["info"](infoPortfolio, "Notification");
        }
        vm.getLists();
    </script>
}
