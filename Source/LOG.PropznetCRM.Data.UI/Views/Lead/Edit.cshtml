@model LOG.PropznetCRM.Data.ViewModel.Lead.LeadViewModel

<div class="container" data-bind="template:{name:'item-lead-template',data:selectedLead}">
    @*<div class="row">
        </div>*@
</div>
@section scripts{
    <script type="text/html" id="item-lead-template">
        <h3>Agent / Staff Creation</h3>
        <h3 class="text-primary">Lead Information</h3>
        <div class="row bdr">
            <div class="col-md-6">

                <div class="form-group ">
                    <label>First Name:</label>
                    <input type="text" data-bind="value:firstname" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Last Name:</label>
                    <input type="text" data-bind="value:lastname" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Company:</label>
                    <input type="text" data-bind="value:company" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Assign To:</label>
                    <select data-bind="options: $root.Assignto ,optionsText: 'Name', optionsValue: 'Id', value:SelectedAssignedTo, optionsCaption:'Select Agent'" class="form-control"></select>
                </div>
            </div>
            <div class="col-md-6 ">
                <div class="form-group">
                    <label>Lead Status:</label>
                    @*<input type="text" data-bind="value:leadStatus" class=" form-control" />*@
                    <select data-bind="options: $root.Leadstatus ,optionsText: 'Name', optionsValue: 'Id', value:SelectedLeadStatus, optionsCaption:'Select LeadStatus'" class="form-control"></select>
                </div>

                <div class="form-group">
                    <label>Lead Source:</label>
                    @*<input type="text" data-bind="value:leadSource" class=" form-control" />*@
                    <select data-bind="options: $root.Leadsource ,optionsText: 'Name', optionsValue: 'Id', value:SelectedLeadSource, optionsCaption:'Select LeadSource'" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label>Agent</label>
                    <select data-bind="options: $root.Assignto ,optionsText: 'Name', optionsValue: 'Id', value:SelectedOptionalAgent, optionsCaption:'Select Agent'" class="form-control"></select>
                </div>

            </div>
        </div>
        <h3 class="text-primary">Contact Details</h3>
        <div class="row bdr">
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" data-bind="value:email" class=" form-control" />
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Phone</label>
                    <input type="text" data-bind="value:phoneNumber" class=" form-control" />
                </div>
            </div>
        </div>
        <h3 class="text-primary">Comments</h3>
        <div class="row bdr">
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Comments</label>
                    <textarea data-bind="value:comment" class=" form-control" rows="6" />
                </div>
            </div>
        </div>
        <div class=" clearfix"></div>
        <div class="col-md-12">
            <button type="button" class="btn btn-primary" data-bind="click:$root.updateLead">Update</button>
            <button type="button" class="btn btn-danger">Cancel</button>
        </div>
    </script>
    <script type="text/javascript">

        $(document).ready(function () {
            var vm = new LeadViewModel();
            ko.applyBindings(vm);
            vm.EditLead(@Model.Id);
        });
    </script>
}